{
  "name": "moibot",
  "version": "0.1.3",
  "main": "src/index.js",
  "description": "A NodeJs Docker Container using Babel and ES6 and Reversed Proxied on NGINX",
  "scripts": {
    "dev": "nodemon -L --exec babel-node src/index.js",
    "build": "babel src -d dist",
    "start": "yarn build && node dist/index.js",
    "postbuild":"yarn start",
    "build:docker": "docker-compose build",
    "dev:docker": "docker-compose up dev",
    "start:docker": "docker-compose up -d",
    "end:docker": "docker-compose down",
    "clean:docker": "docker system prune -f"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bufferutil": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eris": "^0.11.0",
    "eventemitter3": "^4.0.0",
    "express": "^4.17.0",
    "lodash": "^4.17.11",
    "pako": "^1.0.10",
    "sodium-native": "^2.4.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "nodemon": "^1.19.0",
    "yarn": "^1.16.0"
  }
}
